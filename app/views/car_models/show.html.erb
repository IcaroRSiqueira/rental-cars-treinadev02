<h1>Nome: <%= @car_model.name %></h1>

<dl>
  <dt>Ano:</dt>
  <dd><%= @car_model.year %></dd>
  <dt>Motorização:</dt>
  <dd><%= @car_model.motorization %> </dd>
  <dt>Combustível:</dt>
  <dd><%= @car_model.fuel_type %> </dd>
  <dt>Fabricante:</dt>
  <dd><%= @car_model.manufacturer.name %></dd>
  <dt>Categoria:</dt>
  <dd><%= @car_model.car_category.name %><dd/>
</dl>

<%= link_to 'Editar', edit_car_model_path(@car_model) %>

<%= link_to "Deletar Modelo", car_model_path(@car_model), :data => {:method => "delete"} %>

<%= link_to 'Voltar', root_path %>
