<h1>Editar carro da frota</h1>

<% if @car.errors.any? %>
  <p>VocÃª deve corrigir os seguintes erros:</p>
  <ul>
  <% @car.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
  <% end %>
  </ul>
<% end %>

<%= form_for @car do |f| %>
<p>
  <%= f.label :license_plate, 'Placa' %>
  <%= f.text_field :license_plate %>
</p>
<p>
  <%= f.label :color, 'Cor' %>
  <%= f.text_field :color %>
</p>
<p>
  <%= f.label :mileage, 'Quilometragem (Km)' %>
  <%= f.number_field :mileage %>
</p>
<div>
  <%= f.label :car_model_id, 'Modelo' %>
  <%= f.collection_select(:car_model_id, @car_models, :id, :name)%>
</div>
<div>
  <%= f.label :subsidiary_id, 'Filial' %>
  <%= f.collection_select(:subsidiary_id, @subsidiaries, :id, :name)%>
</div>
<%= f.submit 'Enviar' %>
<% end %>
