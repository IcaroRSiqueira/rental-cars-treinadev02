
<h1>Modelo: <%= @car.car_model.name %></h1>

<dl>
  <dt>Placa:</dt>
  <dd><%= @car.license_plate %></dd>
  <dt>Cor:</dt>
  <dd><%= @car.color %> </dd>
  <dt>Quilometragem(Km):</dt>
  <dd><%= @car.mileage %> </dd>
  <dt>Filial:</dt>
  <dd><%= @car.subsidiary.name %></dd>
</dl>

<%= link_to 'Editar', edit_car_path(@car) %>

<%= link_to "Deletar Carro", car_path(@car), :data => {:method => "delete"} %>

<%= link_to 'Voltar', root_path %>
